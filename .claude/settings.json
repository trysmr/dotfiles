{
  "respectGitignore": true,
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(gh pr *:*)",
      "Bash(docker compose exec app rails test)",
      "Bash(docker compose exec app bin/rails test)",
      "Bash(docker compose exec app bin/rails spec)",
      "Bash(docker compose exec app bundle list:*)",
      "Bash(docker compose exec app bundle exec rubocop)",
      "Bash(docker compose exec app bundle exec rubocop -a)",
      "Bash(docker compose exec app bundle exec rspec:*)",
      "Bash(docker compose exec app bin/rubocop)",
      "Bash(docker compose exec app bin/brakeman)",
      "Read(~/.zshrc)",
      "Read(~/.claude/CLAUDE.md)",
      "Read(CLAUDE.md)",
      "Read(.claude/CLAUDE.md)",
      "Read(README.md)",
      "Read(**/*.md)",
      "Skill(reload-context)",
      "Skill(create-branch)",
      "Skill(recent-changes-review)",
      "Skill(commit)",
      "Skill(pr)",
      "Skill(code-search)",
      "Skill(plan-feature)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Write(.env*)",
      "Read(node_modules)",
      "Read(node_modules/**)"
    ],
    "ask": [
      "Bash(git commit:*)"
    ],
    "defaultMode": "plan",
    "disableBypassPermissionsMode": "disable"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/load_context.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/docker_rails_exec_check.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/git_chain_check.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "resume|clear",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/load_context.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "language": "japanese"
}
